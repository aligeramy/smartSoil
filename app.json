{
  "expo": {
    "name": "SmartSoil",
    "slug": "smart-soil",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo/icon/icon.png",
    "scheme": "smart-soil",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/logo/icon/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#063B1D"
    },
    "newArchEnabled": true,
    "primaryColor": "#063B1D",
    "backgroundColor": "#F5F5F7",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/logo/icon/ios-tinted.png",
      "userInterfaceStyle": "automatic",
      "bundleIdentifier": "com.softxinnovations.smartsoil",
      "buildNumber": "9",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to nearby soil moisture sensors.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to nearby soil moisture sensors.",
        "NSLocalNetworkUsageDescription": "This app uses your local network to discover and connect to ESP8266 soil moisture sensors.",
        "UIBackgroundModes": ["bluetooth-central"]
      },
      "associatedDomains": [
        "applinks:smartsoil-app.com"
      ],
      "appleTeamId": "23MN72U7PA"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo/icon/adaptive-icon.png",
        "backgroundColor": "#063B1D"
      },
      "icon": "./assets/images/logo/icon/icon.png",
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": true,
      "permissions": [
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN"
      ],
      "package": "com.softxinnovations.smartsoil",
      "versionCode": 21,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "smartsoil"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo/icon/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo/icon/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#063B1D"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "description": "SmartSoil is an IoT application that helps gardeners and plant enthusiasts monitor soil moisture, temperature, and humidity using ESP8266-based sensors. Get real-time data, view historical trends, and receive watering recommendations for healthier plants.",
    "githubUrl": "https://github.com/softxinnovations/smartsoil",
    "owner": "softxinnovations",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "334467c2-f1d5-4a0e-b474-061f1ab4d9c9"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/334467c2-f1d5-4a0e-b474-061f1ab4d9c9"
    },
    "locales": {
      "en": "./locales/en.json"
    },
    "developmentClient": {
      "silentLaunch": false
    }
  }
}
