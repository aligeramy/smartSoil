{
  "expo": {
    "name": "SmartSoil",
    "slug": "smart-soil",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo/icon/icon.png",
    "scheme": "smart-soil",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/logo/icon/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#063B1D"
    },
    "newArchEnabled": true,
    "primaryColor": "#063B1D",
    "backgroundColor": "#F5F5F7",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/ios/ios-tinted.png",
      "alternateIcon": {
        "light": "./assets/images/ios/ios-light.png",
        "dark": "./assets/images/ios/ios-dark.png"
      },
      "userInterfaceStyle": "automatic",
      "bundleIdentifier": "com.softxinnovations.smartsoil",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to nearby soil moisture sensors.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect to nearby soil moisture sensors.",
        "NSLocalNetworkUsageDescription": "This app uses your local network to discover and connect to ESP8266 soil moisture sensors."
      },
      "associatedDomains": [
        "applinks:smartsoil-app.com"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo/icon/adaptive-icon.png",
        "backgroundColor": "#063B1D"
      },
      "edgeToEdgeEnabled": true,
      "navigationBarColor": "#063B1D",
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": true,
      "permissions": [
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN"
      ],
      "statusBar": {
        "backgroundColor": "#063B1D",
        "barStyle": "light-content",
        "translucent": false
      },
      "package": "com.softxinnovations.smartsoil",
      "versionCode": 20,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "smartsoil"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo/icon/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#013B1A"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "privacy": "unlisted",
    "description": "SmartSoil is an IoT application that helps gardeners and plant enthusiasts monitor soil moisture, temperature, and humidity using ESP8266-based sensors. Get real-time data, view historical trends, and receive watering recommendations for healthier plants.",
    "githubUrl": "https://github.com/yourusername/smartsoil",
    "owner": "softxinnovations",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-eas-project-id"
    },
    "locales": {
      "en": "./locales/en.json"
    },
    "developmentClient": {
      "silentLaunch": false
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "softxinnovations",
            "project": "smartsoil"
          }
        }
      ]
    },
    "notification": {
      "icon": "./assets/images/logo/icon/notification-icon.png",
      "color": "#063B1D",
      "iosDisplayInForeground": true
    },
    "appStoreUrl": "https://apps.apple.com/app/smartsoil/id1234567890",
    "playStoreUrl": "https://play.google.com/store/apps/details?id=com.softxinnovations.smartsoil",
    "privacyPolicyUrl": "https://www.smartsoil-app.com/privacy",
    "termsOfServiceUrl": "https://www.smartsoil-app.com/terms"
  }
}
